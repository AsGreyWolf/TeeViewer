<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:id="@+id/rowlayout_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/map_none"  >
    
    	<!-- 
    android:background="@drawable/ctf1" -->
	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="33dp"
	    >
	    <ImageView
    	    android:src="@android:drawable/presence_offline"
 	        android:id="@+id/rowlayout_online"
 	        android:layout_width="12dp"
 	        android:layout_height="fill_parent"
 	        android:gravity="center|left"
 	        android:contentDescription="@string/Loading"
 	         />
 	    <TextView
 	        style="@style/text_style"
 	        android:id="@+id/rowlayout_name"
 	        android:layout_width="240dp"
 	        android:layout_height="fill_parent"
 	        android:gravity="top|left"
    		android:shadowRadius="4"
 	        
 	        android:textSize="20sp"
 	         >

    	</TextView>

		<TextView
		    style="@style/text_style"
		    android:id="@+id/rowlayout_players"
		    android:layout_width="match_parent"
		    android:layout_height="fill_parent"
		    android:gravity="right|top"
		    android:shadowRadius="3"
		    
		    android:textSize="16sp"
		      >

    	</TextView>
</LinearLayout>
<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="33dp"
	    >
	 	<TextView
	 	    style="@style/text_style"
	 	    android:id="@+id/rowlayout_ip"
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="fill_parent"
	 	    android:gravity="bottom|left"
	 	    
	 	    android:textSize="13sp"
		    android:shadowRadius="3"
	 	      ></TextView>
	 	 	<TextView
	 	 	    style="@style/text_style"
	 	    android:id="@+id/rowlayout_map"
	 	    android:layout_width="match_parent"
	 	    android:layout_height="fill_parent"
	 	    android:gravity="bottom|right"
	 	    
	 	    android:textSize="16sp"
		    android:shadowRadius="3"
	 	      >

    	</TextView>
    	</LinearLayout>
    	<View
 android:layout_width="fill_parent"
 android:layout_height="1dp"
 android:background="#000000" />
</LinearLayout>